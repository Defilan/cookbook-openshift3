apiVersion: v1
kind: Route
metadata:
  name: <%= @route['name'] %>
<% if @route.has_key?('labels') %>
  labels:
  <% @route['labels'].each_pair do |k, v| %>
    <%= k %>: <%= v %>
  <%- end -%>
<%- end -%>
spec:
  host: <% @route['host'] %>
  to:
<% @route['to'].each_pair do |k, v| %>
    <%= k %>: <%= v %>
<%- end -%>
<% if @route.has_key?('tls') %>
  tls:
    termination: <%= @route['tls_termination'] %>
<% unless @route['tls_ca_certificate'].empty? %>
    CACertificate: |
      <%= @route['tls_ca_certificate'] %>  
<%- end -%>
<% unless @route['tls_key'].empty? %>
    key: |
      <%= @route['tls_key'] %>  
<%- end -%>
<% unless @route['tls_certificate'].empty? %>
    certificate: |
      <%= @route['tls_certificate'] %>  
<%- end -%>
<% if @route['tls_termination'] == 'reencrypt' %>
    destinationCACertificate: |
      <%= @route['tls_destination_ca_certificate'] %>  
<%- end -%>
<%- end -%>
